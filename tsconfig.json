{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"isolatedModules": false,
		"downlevelIteration": true,
		"module": "commonjs",
		"moduleResolution": "Node",
		"noLib": true,
		"strict": true,
		"target": "es6",
		"typeRoots": [ "node_modules/@rbxts" ],

		"rootDir": "src",
		"outDir": "out",

		"baseUrl": "src",
		"declaration": true,
		"incremental": true,

		"jsx": "react",
		"jsxFactory": "Roact.createElement",
	}
}
